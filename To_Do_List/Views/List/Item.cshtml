@model List<ToDoList>
<h1>welcome, @TempData.Peek("name")</h1>
<span >Here is your to-do list:</span>
<br />
<br />
<a href="/List/Add" class="btn btn-outline-primary">Create New</a>

<table class="table table-dark mt-3">
    <thead >
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">DeadLine</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.DeadLine</td>
                <td><a href="/List/Edit?Id=@item.Id" class="btn btn-outline-info">Edit</a> <a href="/List/Remove?Id=@item.Id" class="btn btn-outline-info">Delete</a></td>
            </tr>
        }
        
    </tbody>
</table>

